{
  "manifest_version": 3,
  "name": "Nightwire by Fresh Internet Theory",
  "description": "Urban-noir Facebook Reels assistant with AI verdicts, voting, and optional auto-skip.",
  "version": "0.2.0",
  "permissions": [
    "storage"
  ],
  "host_permissions": [
    "https://www.facebook.com/*",
    "http://localhost:8000/*",
    "http://127.0.0.1:8000/*",
    "http://*/*",
    "https://*/*"
  ],
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.facebook.com/reel/*",
        "*://www.facebook.com/reels/*"
      ],
      "js": [
        "content_script.js"
      ],
      "run_at": "document_start"
    }
  ],
  "options_page": "options.html"
}
